class Rectangulo():
	def __init__(self, color, shape, base, altura):
		self.color =  color
		self.shape =  shape
		self.base =  base
		self.altura =  altura
	def __str__(self):
		return '------------------------------'

	@property
	def shape(self):_
		return self.__shape
	@property
	def base(self):_
		return self.__base
	@property
	def altura(self):_
		return self.__altura

	@shape.setter
	def shape(self, shape):
		self.__shape = shape
	@base.setter
	def base(self, base):
		self.__base = base
	@altura.setter
	def altura(self, altura):
		self.__altura = altura

	def area(self):
		pass
	def perimetro(self):
		pass
